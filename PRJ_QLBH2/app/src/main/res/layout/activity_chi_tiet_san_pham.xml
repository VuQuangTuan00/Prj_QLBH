<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201520">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#201520">

        <!-- LinearLayout chứa toàn bộ nội dung -->
        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#201520"
            android:orientation="vertical"
            android:padding="30dp">

            <!-- Nội dung của bạn giữ nguyên từ đây -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/baseline_arrow_back_24"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết sản phẩm"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_SanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/dauan" />



            <TextView
                android:id="@+id/ten_SanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Dầu Ăn SIMPLY 1 LÍT -CÁI LÂN - MEIZAN- NEPTUNE"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gia_SanPham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="137.000"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ"
                    android:textColor="@color/white"
                    android:textSize="22dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/botron_sp_lienquan"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/dauAn2View"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="12dp"
                        app:srcCompat="@drawable/ic_oil" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Dầu ăn 1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="137.000đ"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/botron_sp_lienquan"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/dauAn2View2"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="12dp"
                        app:srcCompat="@drawable/ic_oil" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Dầu ăn 1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="137.000đ"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Thông tin sản phẩm"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/thongTin_SanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Loại dầu Dầu thực vật Dung tích 1 lít Thành phần Dầu Olein, dầu đậu nành, Este của polyglycerol với a-xít béo (475) hoặc sorbitan tristearat (492). Ưu điểm Được sản xuất từ nguyên liệu tự nhiên với công nghệ tinh chế hiện đại."
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnThemGioHang"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm vào giỏ hàng"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_no_radius"

                />


            <!-- Kết thúc nội dung -->
        </LinearLayout>
    </ScrollView>


</RelativeLayout>